{
  "name": "proofdict",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://proofdict.github.io/editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/proofdict/editor"
  },
  "dependencies": {
    "@immutable-array/prototype": "^1.0.4",
    "@proofdict/tester": "^2.2.1",
    "@types/classnames": "^2.2.6",
    "@types/jest": "^23.3.9",
    "@types/js-yaml": "^3.11.2",
    "@types/node": "^10.12.3",
    "@types/prop-types": "^15.5.6",
    "@types/react": "16.4.18",
    "@types/react-dom": "16.0.9",
    "@types/react-select": "^2.0.6",
    "@uifabric/icons": "^6.1.2",
    "almin": "^0.18.1",
    "almin-devtools": "^0.4.0",
    "almin-logger": "^6.2.3",
    "almin-react-container": "^0.7.3",
    "classnames": "^2.2.6",
    "ddd-base": "^0.9.0",
    "js-yaml": "^3.12.0",
    "kuromojin": "^1.4.0",
    "lodash.intersectionby": "^4.7.0",
    "micro-memoize": "^2.1.2",
    "normalize.css": "^7.0.0",
    "office-ui-fabric-react": "^6.100.1",
    "prh": "^5.4.3",
    "react": "^16.6.1",
    "react-dom": "^16.6.1",
    "react-select": "^2.1.1",
    "safe-regex": "^2.0.1",
    "sanitize-filename": "^1.6.1",
    "shallow-equal-object": "^1.1.1",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@alrra/travis-scripts": "^3.0.1",
    "@types/lodash-es": "^4.17.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.1",
    "react-scripts-ts": "^3.1.0",
    "sw-precache": "^5.2.1",
    "typescript": "^3.1.6"
  },
  "resolutions": {
    "@types/react": "16.4.18",
    "@types/react-dom": "16.0.9"
  },
  "scripts": {
    "prettier": "prettier --write --print-width 120 --tab-width 4 '**/*.{ts,tsx,css}'",
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build && npm run update-sw-cache",
    "build:tools": "rm -rf tools/output && tsc -p tsconfig.tool.json",
    "test": "react-scripts-ts test",
    "update-sw-cache": "sw-precache --config=sw-precache-config.js && mv service-worker.js build/"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,css}": [
      "prettier --write --print-width 120 --tab-width 4",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git reset",
      "pre-commit": "lint-staged"
    }
  }
}
