{
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "plugins": [
    "prettier"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-console": "warn",
    "no-undef": "error",
    "no-var": "error",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "tabWidth": 4
      }
    ]
  }
}